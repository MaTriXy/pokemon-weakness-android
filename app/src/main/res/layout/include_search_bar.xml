<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_bar_height"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:showIn="@layout/activity_pokemon_list_toolbar">

    <EditText
        android:id="@+id/pokemon_list.search.input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:hint="Search by name or number"
        android:imeOptions="actionSearch"
        android:inputType="textCapSentences|textNoSuggestions"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="#66000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/pokemon_list.search.clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pokemon_list.search.more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:tint="@color/icon" />
</android.support.v7.widget.CardView>